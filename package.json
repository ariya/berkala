{
  "name": "@ariya/berkala",
  "version": "1.1.6",
  "description": "Run scheduled tasks",
  "main": "index.js",
  "bin": {
    "berkala": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "test": "npm run check-format",
    "check-format": "prettier --check \"**/*.js\"",
    "format-code": "prettier --write \"**/*.js\"",
    "build": "pkg --compress brotli ."
  },
  "author": "Ariya Hidayat",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ariya/berkala.git"
  },
  "keywords": [
    "scheduler",
    "tasks",
    "cron",
    "cronjob"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "bree": "~6.2.1",
    "js-yaml": "~4.1.0",
    "readline-sync": "~1.4.10"
  },
  "devDependencies": {
    "pkg": "~5.3.1",
    "prettier": "~2.3.2"
  },
  "pkg": {
    "outputPath": "dist"
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 120,
    "quoteProps": "consistent",
    "singleQuote": true,
    "trailingComma": "none"
  }
}
